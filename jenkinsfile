pipeline {
    agent any

    tools {
        maven "Maven"  
    }

    stages {
        stage("Check out") {
            steps {
                git branch: 'main', url: 'https://github.com/StellaPaule/Stella_WebApp'
            }
        }

        stage("Build Maven") {
            steps {
                script {
                    bat "mvn clean package"  // Use 'bat' for Windows
                }
            }
        }
        
        stage("Build Docker image") {
            steps {
                script {
                    bat "docker build -t stellakwate/webapp ."  
                }
            }
        }
    }
}
